@model IEnumerable<QuizifyWeb.Models.Team>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <br />
<h1 class="lead">Your teams</h1>

@if (Model != null && Model.ToList().Count > 0)
{
    <p>
        @Html.ActionLink("+ Create New", "Create", null, new { @class = "btn btn-success" })
    </p>

    <table class="table table-striped table-hover">
        <thead class="thead">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>Members count</th>
            <th>Options</th>
        </tr>

        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td >
                    @item.Users.Count
                </td>
                <td>
                    @Html.ActionLink("Rename", "Edit", new {id = item.Id}) |
                    @Html.ActionLink("Add members", "Details", new {id = item.Id}) |
                    @Html.ActionLink("Delete", "Delete", new {id = item.Id})
                </td>

            </tr>
        }

    </table>
}
else
{
    <h4 class="lead">You don't have any teams created or you are not apart of any team!</h4>
    <p>
        Let's get started with creating new team, press @Html.ActionLink("Create New Team", "Create", null, new { @class = "btn btn-success" }) to create new team...   
    </p>
}
</div>
@model IEnumerable<QuizifyWeb.Models.Team>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="lead">Your teams</h1>

<p>
    @Html.ActionLink("+ Create New", "Create", null, new {@class = "btn btn-success"})
</p>


@if (Model.ToList().Count > 0)
{
    <table class="table table-striped table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>Members</th>
            <th>Options</th>
        </tr>


        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td >
                    @item.Users.Count
                </td>
                <td>
                    @Html.ActionLink("Rename", "Edit", new {id = item.Id}) |
                    @Html.ActionLink("Add members", "Details", new {id = item.Id}) |
                    @Html.ActionLink("Delete", "Delete", new {id = item.Id})
                </td>

            </tr>
        }

    </table>
}
else
{
    <h2 class="lead">You have no teams created...</h2>
    @Html.ActionLink("+ Create New Team", "Create", null, new {@class = "btn btn-default"})
}


@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title [Quizify]</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a class="navbar-brand" onclick="window.location.reload()">
                    <span><img src="data:image/png;base64," title="Poll Topic" width="32"></span>
                    Quizify
                </a>


            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @{
                        string url = HttpContext.Current.Request.Url.AbsolutePath;
                    }

                    <li @if (url.Contains("Home") || url == "/") { <text>class="active"</text> }>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li @if (url.Contains("Quizzes")) { <text>class="active"</text> }>@Html.ActionLink("Quizzes", "Quizzes", "Home")</li>
                    @if (Request.IsAuthenticated)
                    {
                        <li @if (url.Contains("Teams")) { <text>class="active"</text> }>@Html.ActionLink("My Teams", "Index", "Teams")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="body-content">
        @RenderBody()
        <hr />
        <footer style="background:#111; text-align:center; color:#FFF;">
            <p>&copy; @DateTime.Now.Year - Quizify</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

<script>

    $(document).ready(function() {

        console.log(window.location.search);

    });

</script>

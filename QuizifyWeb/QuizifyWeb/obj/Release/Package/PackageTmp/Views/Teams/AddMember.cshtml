@using Microsoft.AspNet.Identity
@using QuizifyWeb.Models
@model QuizifyWeb.Models.Team

@{
    ViewBag.Title = "Todo title";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //var user = ApplicationDbContext.Create().Users.Find(User.Identity.GetUserId());
}

<div class="container">
    <br />
    <h4>Add members to team</h4>
    <p>
        You can add new members to your tim by filling "Enter member email" field. 
    </p>
    <hr />
    <div class="form-group">

        <label class="control-label col-md-2">Member email:</label>
        <input class="input text-box single-line" id="MemberEmail" name="MemberEmail" type="text" placeholder="Enter member email..." value="">
       

    </div>

    <div class="col-md-10">
        <button id="btn-add-member" class="btn btn-success">Add new member</button>
    </div>
    <hr />
    <br /><br />
    <table class="table table-striped table-hover">
        <tr>
            <th>Name</th>
            <th>Email</th>
        </tr>


        @foreach (var user in Model.Users)
        {
            <tr>
                <td>
                    @user.Name
                </td>
                <td>
                    @user.Email
                </td>
            </tr>
        }
    </table>

    <div>
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-danger" })
    </div>
</div>

<script>
    var userId = "@(User.Identity.GetUserId())";
    var teamId = "@(Model.Id)";
</script>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/Extensions.js")
    @Scripts.Render("~/Scripts/TeamsAddMember.js")
}